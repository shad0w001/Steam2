@model FastSteamCopy.Services.ViewModels.GameViewModel

<form method="post" asp-action="Create">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <p><label asp-for="Title">Title:</label></p>
                            <input asp-for="Title" class="form-control" />

                            <p><label asp-for="Developer">Developer:</label></p>
                            <input asp-for="Developer" class="form-control" />

                            <p><label asp-for="Publisher">Publisher:</label></p>
                            <input asp-for="Publisher" class="form-control" />

                            <p><label asp-for="ReleaseDate">Release Date:</label></p>
                            <input type="date" asp-for="ReleaseDate" class="form-control" />

                            <p><label asp-for="Genre">Genre:</label></p>
                            <input asp-for="Genre" class="form-control" />

                            <p><label asp-for="Platform">Platform:</label></p>
                            <input asp-for="Platform" class="form-control" />
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-50" asp-action="Create" asp-controller="Game" value="Add Game" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-50">Back</a>
            </div>
        </div>
    </div>
</form>