@model List<FastSteamCopy.Services.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="col">
    <a asp-action="Create" class="btn btn-info w-50">Make New Game</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a asp-action="Update" asp-controller="Game" asp-route-id="@item.Id">Update</a> |
                    <a asp-action="Details" asp-controller="Game"  asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Game" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>