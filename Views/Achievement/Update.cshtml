@model FastSteamCopy.Services.ViewModels.AchievementViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Game</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Update">
            <div class="container">
                <div class="col-md-12 col-lg-12">
                    <article class="post vt-post">
                        <div class="row">
                            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                                <div class="caption">
                                    <p><label for="Title" class="form-label">Title:</label></p>
                                    <input type="text" class="form-control" asp-for="Name"/>

                                    <p><label for="Description" class="form-label">Description:</label></p>
                                    <input type="text" class="form-control" asp-for="Description" />

                                    <p><label for="GameId" class="form-label">Game:</label></p>
                                    <select type="text" class="form-control" asp-for="GameId" asp-items="ViewBag.Games"></select>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info" asp-action="Update" asp-controller="Achievement" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-100">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}