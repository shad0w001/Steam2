@model FastSteamCopy.Services.ViewModels.AchievementViewModel

<form method="post" asp-action="Create">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <p><label asp-for="Name">Name:</label></p>
                            <input asp-for="Name" class="form-control" />

                            <p><label asp-for="Description">Description:</label></p>
                            <input asp-for="Description" class="form-control" />

                            <p><label asp-for="GameId">Game:</label></p>
                            <select asp-for="GameId" class="form-control" asp-items="ViewBag.Games"></select>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-50" asp-action="Create" asp-controller="Achievement" value="Add Achievement" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-50">Back</a>
            </div>
        </div>
    </div>
</form>